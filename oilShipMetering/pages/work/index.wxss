/* pages/work/index.wxss */

.container {
  padding: 0;
  justify-content: flex-start;
}

.work {
  width: 90%;
  padding-bottom: 30rpx;
}

.draft {
  width: 90%;
  margin: 0 auto;
  background: #fff;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
  padding: 30rpx 0;
}

.ship {
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 30rpx 0;
}
.ship .lan{
  color: #4FA5FD;
}

.ship label {
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 5%;
  text-align: justify;
  color: #4297fa;
  font-weight: 400;
}

.checkbox {
  font-size: 20rpx;
}

.ship label::after {
  content: '';
  display: inline-block;
  width: 100%;
}

.ship .stateSwitch{
  width: 45%;
  height: 80rpx;
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: center;
  padding-left: 20rpx; 
}

.ship input {
  width: 45%;
  height: 80rpx;
  border-radius: 16rpx;
  background: rgba(62, 155, 253, 0.1);
  padding-left: 20rpx;
}

.ship .isWork {
  width: 45%;
  height: 80rpx;
  border-radius: 16rpx;
  background: rgba(62, 155, 253, 0.1);
  padding-left: 20rpx;
}

.ship .isWork text {
  height: 80rpx;
  line-height: 80rpx;
}

