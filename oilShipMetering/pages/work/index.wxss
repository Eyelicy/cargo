checkbox .wx-checkbox-input {
  width: 22rpx;
  height: 22rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: 1px solid #fe4f4f;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  content: '';
  width: 18rpx;
  height: 18rpx;
  background: #fe4f4f;
}

.shipTitle {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shipTitle radio-group {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.shipTitle radio-group label:nth-child(1) {
  padding-right: 5%;
  border-right: 1px solid #4099fd;
}

.shipTitle radio-group label:nth-child(2) {
  padding-left: 5%;
}

.shipTitle radio-group .radio {
  padding: 10rpx 0;
  text-align: center;
  width: 35%;
}

.next {
  width: 60%;
  margin: 30rpx auto;
  background: #4099fd;
  color: #fff;
}

