/* pages/evaluate/index.wxss */

page {
  background: #f7f7f7;
}

.oEvaluation {
  width: 90%;
  height: 200rpx;
  background: #fff;
  margin: 30rpx auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 0px 13px 0px rgba(0, 58, 105, 0.11);
  border-radius: 10rpx;
}

.oEvaluationText {
  letter-spacing: 5px;
  font-size: 36rpx;
  font-weight: 400;
  margin-bottom: 30rpx;
}

.star {
  margin: 0 20rpx;
  width: 54rpx;
  height: 54rpx;
}

.evaluate{
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 0px 13px 0px rgba(0, 58, 105, 0.11);
  border-radius: 10rpx;
  background: #fff;
}

.evaluateRow{
  width: 90%;
  margin: 30rpx auto;
  display: flex;
  align-items: center;
}

.evaluateRow text{
  line-height: 40rpx;
  letter-spacing: 5px;
}

.face{
  margin: 0 15rpx;
  width: 40rpx;
  height: 40rpx;
}

.evaluateText{
  width: 90%;
  height: 240rpx;
  background: #FDFDFD;
  padding: 20rpx 20rpx;
  margin-bottom: 30rpx;
}

.subBtn{
  margin-top: 45rpx;
  width: 70%;
  background: #4099FD;
  border-radius:70rpx;
  color: #fff;
}
