/* pages/login/login.wxss */

/* 引入图标 */
@import "../../css/icon.wxss";

page {
  background: url(https://wxship.xzitc.com/Public/app/img/yc_login_bg.png)no-repeat top;
  height: 100%;
  background-size: cover;
}

.container {
  padding: 0;
  justify-content: space-between;
}

.alert-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.modalDlg {
  width: 600rpx;
  height: 816rpx;
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
  z-index: 9999;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btnImg {
  position: absolute;
  border-radius: 26rpx;
  font-size: 22rpx;
  line-height: 52rpx;
  left: 0;
  right: 0;
  bottom: 20%;
  color: #fff;
  z-index: 10000;
  width: 270rpx;
  height: 52rpx;
  margin: auto;
  background: linear-gradient(77deg, rgba(140, 113, 253, 1) 0%, rgba(116, 62, 253, 1) 100%);
}

.btnClose {
  width: 62rpx;
  height: 62rpx;
  margin: 0 auto;
}

.title {
  text-align: center;
  font-size: 45rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wDiv {
  width: 15rpx;
  height: 15rpx;
  border-radius: 5rpx;
  background: #fff;
  margin: 0 30rpx;
}

.login {
  width: 90%;
  height: 640rpx;
  border-radius: 10px;
  background: #fff;
  margin: auto;
  position: absolute;
  top: 30rpx;
  left: 0;
  right: 0;
  z-index: 3;
}

.btnCs {
  display: block;
  margin: 0 auto;
  margin-top: 32rpx;
  font-size: 12px;
  color: #4099fd;
  text-align: center;
}

.titImg {
  width: 150rpx;
  height: 150rpx;
  margin: auto;
  position: absolute;
  border: 8rpx solid #4d9df5;
  border-radius: 50%;
  top: -79rpx;
  left: 0;
  right: 0;
}

.titText {
  font-size: 40rpx;
  color: #4099fd;
  font-weight: 600;
  display: inline-block;
  width: 100%;
  text-align: center;
  margin-top: 94rpx;
}

.itemTop {
  padding-top: 45rpx;
}

.loginItem {
  width: 80%;
  height: 100rpx;
  margin: 0 auto;
}

.loginItem label {
  line-height: 100rpx;
  float: left;
  padding-left: 5%;
}

.loginItem input {
  padding-left: 5%;
  width: 80%;
  height: 100rpx;
}

.login1 {
  width: 85%;
  height: 640rpx;
  border-radius: 10px;
  background: rgba(250, 250, 250, 0.7);
  margin: auto;
  position: absolute;
  top: 45rpx;
  left: 0;
  right: 0;
  z-index: 2;
}

.login2 {
  width: 80%;
  height: 640rpx;
  border-radius: 10px;
  background: rgba(250, 250, 250, 0.5);
  margin: auto;
  position: absolute;
  top: 55rpx;
  left: 0;
  right: 0;
  z-index: 1;
}

.content {
  margin-top: 25%;
  position: relative;
  width: 100%;
  height: 540rpx;
}

.divLine {
  background: rgba(96, 166, 246, 0.25);
  width: 90%;
  height: 5rpx;
  margin: 0 auto;
}

.btnLogin {
  width: 72%;
  height: 80rpx;
  color: #fff;
  border: none;
  background: #409afd;
  font-size: 32rpx;
  line-height: 80rpx;
  margin-top: 60rpx;
  letter-spacing: 15rpx;
}

.titTxt {
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 24rpx;
  color: #fff;
  padding-bottom: 15rpx;
}
