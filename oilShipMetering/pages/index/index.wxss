/* pages/index/index.wxss */

page {
  background: #f7f7f7;
  height: 100%;
}

.container {
  padding: 0;
  justify-content: flex-start;
}

.tab {
  width: 50%;
  height: 70rpx;
  text-align: center;
  padding: 10rpx 0;
  background: #fff;
  color: #b4b4b4;
  font-weight: 500;
  line-height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.tab image {
  width: 60rpx;
  height: 60rpx;
}

.tab:nth-child(odd) {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.tab:nth-child(even) {
  flex-direction: row-reverse;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.topTabSwiper {
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  margin-top: 30rpx;
  width: 90%;
  zoom: 1;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  color: #fff;
  background: #3e9afd;
}

.swiper {
  width: 100%;
}

.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
  /* padding: 80rpx 0; */
}

.task {
  width: 90%;
  height: 480rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
}

.ship {
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-top: 30rpx;
}

.ship:nth-child(1) {
  padding-top: 60rpx;
}

.ship label {
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 5%;
  text-align: justify;
  color: #4297fa;
  font-weight: 400;
}

.ship label::after {
  content: '';
  display: inline-block;
  width: 100%;
}

.ship input {
  width: 65%;
  height: 80rpx;
  border-radius: 16rpx;
  background: rgba(62, 155, 253, 0.1);
  padding-left: 20rpx;
}

.shipOperation {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-top: 30rpx;
  width: 90%;
  margin: 0 auto;
}

.shipOperation .shipBtn {
  width: 25%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.shipBtn text {
  font-weight: 500;
  color: #4297fa;
  line-height: 50rpx;
}

.shipBtn image {
  width: 50rpx;
  height: 50rpx;
}

.newWork {
  width: 90%;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
  border-radius: 8rpx;
}

.newWork image {
  width: 60rpx;
  height: 60rpx;
}

.newWork text {
  padding-left: 15rpx;
  font-weight: 400;
  color: #4099fd;
}

.load{
  font-size: 28rpx;
  color: #999;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  z-index: -1;
}