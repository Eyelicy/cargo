/* pages/gauge/index.wxss */

page {
  width: 100%;
  height: 100%;
}

form {
  display: block;
}

.work {
  width: 90%;
  height: 100rpx;
  margin: 0 auto;
  background: #fff;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
}

.work radio-group {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  line-height: 100rpx;
}

.radio:checked {
  color: #52a3fd;
}

.draft {
  width: 90%;
  height: 280rpx;
  margin: 30rpx auto;
  background: #fff;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
}

.ship {
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 30rpx 0;
}

.ship label {
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 5%;
  text-align: justify;
  color: #4297fa;
  font-weight: 400;
}

.ship label::after {
  content: '';
  display: inline-block;
  width: 100%;
}

.ship input {
  /* width: 100%; */
  height: 80rpx;
  border-radius: 16rpx;
  background: rgba(62, 155, 253, 0.1);
  padding-left: 20rpx;
}

.ship picker {
  width: 45%;
  height: 80rpx;
  border-radius: 16rpx;
  background: rgba(62, 155, 253, 0.1);
  /* padding-left: 20rpx; */
}

.ship picker text {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
}

.btnGroup {
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
}

.next {
  width: 40%;
  height: 80rpx;
  color: #fff;
  line-height: 80rpx;
  align-self: center;
  background: #4297fa;
}

@-webkit-keyframes twinkling {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}
