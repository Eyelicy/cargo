/* pages/search/index.wxss */

page {
  background: #f7f7f7;
}

.searchBar {
  width: 94%;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 45rpx;
}

.filter {
  color: #4099fd;
}

.condition {
  width: 94%;
  margin: 30rpx auto;
  color: #838383;
  background: #fff;
  box-shadow: 0px 0px 7px 0px rgba(27, 27, 27, 0.08);
  border-radius: 8rpx;
  padding-bottom: 60rpx;
}

.title {
  display: inline-block;
  padding-left: 5%;
  margin: 30rpx 0;
}

.conditionPicker {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
}

.conditionCheckbox {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin: 0 auto;
  position: relative;
}

.checkbox{
  margin-right: 40rpx;
}

checkbox .wx-checkbox-input {
  border: none;
  background: url(data:image/png;base64,) no-repeat;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: url(data:image/png;base64,) no-repeat;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: transparent;
  background-color: transparent;
}

.pickerData {
  /* width: 45%; */
  background: #f4f4f4;
  border-radius: 30rpx;
}

.pickerData .picker {
  padding: 10rpx 40rpx;
}

.line {
  width: 10%;
  height: 4rpx;
  background: #ababab;
  border-radius: 2rpx;
}

.btnConfirm{
  width: 50%;
  margin: 0 auto;
  background: #50A4FD;
  border: none;
  color: #fff;
  border-radius: 45rpx;
  margin-top: 45rpx;
}

.task {
  width: 94%;
  height: 480rpx;
  margin: 30rpx auto;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
}

.ship {
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-top: 30rpx;
}

.ship:nth-child(1) {
  padding-top: 60rpx;
}

.ship label {
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 5%;
  text-align: justify;
  color: #4297fa;
  font-weight: 400;
}

.ship label::after {
  content: '';
  display: inline-block;
  width: 100%;
}

.ship input {
  width: 65%;
  height: 80rpx;
  border-radius: 16rpx;
  background: rgba(62, 155, 253, 0.1);
  padding-left: 20rpx;
}

.shipOperation {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-top: 30rpx;
  width: 90%;
  margin: 0 auto;
}

.shipOperation .shipBtn {
  width: 25%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.shipBtn text {
  font-weight: 500;
  color: #4297fa;
  line-height: 50rpx;
}

.shipBtn image {
  width: 50rpx;
  height: 50rpx;
}

.load{
  font-size: 28rpx;
  color: #999;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  /* position: absolute;
  bottom: 0;
  left: 0; */
  z-index: -1;
}