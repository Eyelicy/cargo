/* pages/evenCapacity/index.wxss */

page {
  background: #f7f7f7;
}

form {
  display: block;
}

.content {
  width: 100%;
  height: 520rpx;
  margin: 30rpx auto;
  background: #fff;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
  text-align: center;
}

.title {
  width: 90%;
  padding: 30rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0 auto;
}

form {
  width: 100%;
  height: 100%;
}

.rightColumn1 {
  width: 90%;
  /* height: 100%; */
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
}

.textKg {
  float: right;
  margin-right: 5%;
  display: block;
  color: #50a4fc;
  text-align: right;
  border: 1px solid #50a4fc;
  border-radius: 5px;
  padding: 0 5px;
  margin-bottom: 30rpx;
}

.column {
  width: 48%;
  height: 30%;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.column text {
  width: 100%;
  height: 40%;
  background: #50a4fc;
  display: block;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  text-align: center;
  line-height: 28px;
  font-size: 26rpx;
  color: #fff;
}

.column input {
  width: 100%;
  height: 80rpx;
  min-height: 80rpx;
  line-height: 80rpx;
  background: #d9ebfe;
  display: block;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}

.inputPl {
  font-size: 26rpx;
  color: #888;
  text-align: center;
}

.sub {
  width: 60%;
  height: 80rpx;
  margin: 30rpx auto;
  background: #4099fd;
  color: #fff;
  line-height: 80rpx;
}
