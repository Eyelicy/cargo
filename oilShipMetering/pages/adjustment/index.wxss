/* pages/adjustment/index.wxss */

page {
  background: #f7f7f7;
}

.container {
  padding: 0;
}

.content {
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin: 30rpx auto;
  box-shadow: 0px 0px 7px 0px rgba(27, 27, 27, 0.08);
}

.work {
  width: 90%;
  height: 100rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
  background: #fff;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
}

.reasonGroup {
  width: 90%;
  height: 100rpx;
  background: #fff;
  margin: 0 auto;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
  margin-bottom: 30rpx;
}

.reasonGroup .picker {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.reasonGroup label {
  /* width: 30%; */
  height: 100rpx;
  line-height: 100rpx;
  margin-right: 5%;
  text-align: justify;
  color: #4297fa;
  font-weight: 400;
}

.reasonGroup text {
  display: block;
  /* width: 55%; */
  height: 100rpx;
  line-height: 100rpx;
  /* border-radius: 16rpx;
  background: rgba(62, 155, 253, 0.1);
  padding-left: 20rpx; */
}

.work radio-group {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  line-height: 100rpx;
}

.radio:checked {
  color: #52a3fd;
}

.content-weight {
  width: 90%;
  height: 120rpx;
  margin: 0 auto;
  background: #fff;
  box-shadow: 0px 0px 7px 0px rgba(27, 27, 27, 0.08);
  display: flex;
  flex-direction: row;
}

.content-weight .weight {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

form {
  width: 100%;
  margin: 0 auto;
}

.content-nav {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.content-nav .title {
  flex: 1;
  height: 112rpx;
  text-align: center;
  line-height: 112rpx;
  font-size: 32rpx;
  color: #3e3e3e;
  background: #ecf5ff;
}

.content-nav .diline {
  width: 1px;
  background: rgba(0, 124, 253, 0.2);
}

.content-inp .title {
  flex: 1;
  height: 112rpx;
  text-align: center;
  line-height: 112rpx;
  font-size: 32rpx;
  color: #3e3e3e;
  background: #ecf5ff;
}

.content-inp .inp {
  background: #fff;
}

.content-inp .diline {
  width: 1px;
  background: rgba(0, 124, 253, 0.2);
}

.content-inp {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  border-top: 1px solid rgba(0, 124, 253, 0.2);
}

.next {
  width: 60%;
  height: 80rpx;
  color: #fff;
  line-height: 80rpx;
  background: #4297fa;
  margin: 45rpx auto;
}
