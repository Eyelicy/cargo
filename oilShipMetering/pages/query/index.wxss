/* pages/query/index.wxss */

page {
  background: #f7f7f7;
}

.simple {
  width: 100%;
  height: 180rpx;
  background: #4099fd;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-top: 45rpx;
}

.top {
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
}

.row {
  width: 30%;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.row .tit {
  color: rgba(255, 255, 255, 0.65);
}

.top .row .titText {
  width: 80%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: 500;
  color: #fff;
  margin: 0 auto;
}

.bottom .row .titText {
  width: 80%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: 500;
  color: #fff;
  margin: 0 auto;
}

.draft {
  width: 90%;
  height: 120rpx;
  margin: 30rpx auto;
  background: #fff;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.qian {
  width: 48%;
  height: 100%;
  display: flex;
  flex-direction: row;
  color: #fff;
}

.hou {
  width: 48%;
  height: 100%;
  display: flex;
  flex-direction: row;
  color: #fff;
}

.draft .qian .title {
  width: 60rpx;
  height: 30rpx;
  background: rgba(23, 170, 190);
  text-align: center;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #fff;
}

.draft .hou .title {
  width: 60rpx;
  height: 30rpx;
  background: #fb8213;
  text-align: center;
  font-size: 24rpx;
  line-height: 30rpx;
}

.draftT {
  align-self: center;
  color: #4099fd;
}

.draft .divLine {
  width: 1px;
  height: 80%;
  border-right: 1px solid #4099fd;
  align-self: center;
}

.cabinDiv {
  width: 90%;
  margin: 30rpx auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: #fff;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
  border-radius: 16rpx;
  padding-bottom: 45rpx;
}

.cabinDivT {
  display: block;
  height: 80rpx;
  text-align: center;
  color: #4099fd;
  font-weight: 500;
  line-height: 80rpx;
  font-size: 36rpx;
}

.cabin {
  display: flex;
  flex-direction: row;
}

.cabin .qian {
  display: flex;
  flex-direction: column;
}

.cabinT {
  color: #4099fd;
  padding-top: 15rpx;
  font-weight: 500;
}

.cabinText {
  color: #888;
}

.details {
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
  background: #fff;
}

.detailsD {
  display: flex;
  flex-direction: row;
}

.detailsDiv {
  display: flex;
  flex-direction: column;
  width: 50%;
  position: relative;
}

.install {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 30rpx;
  right: 0;
  margin-right: 20rpx;
}

.detailsDiv .row {
  padding-top: 10rpx;
  padding-left: 15rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.detailsDiv .row:nth-child(1) {
  padding-top: 30rpx;
}

.detailsDiv .tit {
  color: #4099fd;
  font-size: 30rpx;
}

.detailsDiv .titText {
  padding-left: 15rpx;
  color: #888;
  font-size: 30rpx;
}

.detailsImg {
  padding: 10rpx 0;
  width: 100%;
  display: flex;
  justify-content: center;
}

.detailsImg image {
  width: 30rpx;
  height: 30rpx;
  text-align: center;
}

.qian .cabinT {
  padding-left: 45rpx;
}

.btnGroup {
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  margin-bottom: 45rpx;
}

.autographBtn {
  margin: 0;
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background: #4297fa;
}

.openPdf {
  margin: 0;
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background: #ff9227;
}

.exp {
  width: 86%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 15rpx auto;
  border: 2px solid rgb(225, 225, 232);
  border-radius: 10rpx;
  padding: 0 20rpx;
}
