/* pages/registered/index.wxss */

page {
  width: 100%;
  height: 100%;
  background: url(https://wxship.xzitc.com/Public/app/img/register_bg.png) no-repeat center;
  display: flex;
  justify-content: center;
}

.main {
  width: 80%;
  height: 1000rpx;
  background: #fff;
  margin-top: 120rpx;
}

.progress {
  padding: 45rpx 0;
}

.loginItem {
  margin-top: 45rpx;
  height: 80rpx;
}

.loginItem label {
  width: 140rpx;
  line-height: 80rpx;
  float: left;
  text-align-last: justify;
}

.loginItem input {
  width: 60%;
  height: 80rpx;
}

.codeBtn {
  height: 60rpx;
  border: none;
  background: #2787ff;
  border-radius: 30rpx;
  color: #fff;
  line-height: 60rpx;
}

.nextStep {
  margin-top: 100rpx;
  background: rgba(39, 135, 255, 1);
  border-radius: 25px;
  color:#fff;
  height: 75rpx;
  line-height: 75rpx;
}

.divLine {
  background: rgba(15, 122, 255, 0.65);
  height: 4rpx;
}

.label {
  color: rgba(15, 122, 255, 0.7);
}


.showModel{
  width: 90%;
  height: 400px;
  top: 0;
  bottom: 0;
  margin: auto;
  position: absolute;
  background: url(https://wxship.xzitc.com/Public/app/img/company_claim_bg.png) no-repeat center;
  background-size:90% 90%;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}

button::after {
  border: none;
  border-radius: 0;
  
}