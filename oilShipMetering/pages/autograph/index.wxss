/* pages/autograph/index.wxss */

page {
  width: 100%;
  height: 100%;
  background: #fbfbfb;
}

.wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-content: center;
  flex-direction: column;
  justify-content:flex-start;
  font-size: 28rpx;
}

.handWriting {
  background: #fff;
  width: 100%;
  height: 100%;
}

.handRight {
  display: inline-flex;
  align-items: center;
}

.handCenter {
  border: 4px dashed #e9e9e9;
  flex: 5;
  /* overflow: hidden;  */
  box-sizing: border-box;
}

