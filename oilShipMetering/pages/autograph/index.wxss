.handBtn button {
  margin: 0;
  font-size: 28rpx;
}

.handBtn {
  width: 95%;
  flex: 1;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.delBtn {
  width: 112rpx;
  height: 40rpx;
  color: #666;
  line-height: 40rpx;
}

.subBtn {
  width: 112rpx;
  height: 40rpx;
  background: #008ef6;
  color: #fff;
  line-height: 40rpx;
}

.black-select {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 30rpx;
  left: 25rpx;
}

.black-select.color_select {
  width: 90rpx;
  height: 90rpx;
  top: 30rpx;
  left: 10rpx;
}

.red-select {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 140rpx;
  left: 25rpx;
}

.red-select.color_select {
  width: 90rpx;
  height: 90rpx;
  top: 120rpx;
  left: 10rpx;
}
