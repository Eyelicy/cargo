/* pages/newWork/index.wxss */
page{
  height: 100%;
}

.newWork {
  width: 90%;
  margin: 0 auto;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
  padding-bottom: 30rpx;
}

.ship {
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 30rpx 0;
}

.ship label {
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 5%;
  text-align: justify;
  color: #4297fa;
  font-weight: 400;
}

.ship label::after {
  content: '';
  display: inline-block;
  width: 100%;
}

.ship input {
  width: 55%;
  height: 80rpx;
  border-radius: 16rpx;
  background: rgba(62, 155, 253, 0.1);
  padding-left: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  text-align: left;
   
}

picker {
  width: 55%;
  height: 80rpx;
  border-radius: 16rpx;
  background: rgba(62, 155, 253, 0.1);
  padding-left: 20rpx;
}

.picker text {
  float: left;
  width: 75%;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
  line-height: 80rpx;
}

.picker label {
  float: right;
  padding-right: 15rpx;
  font-size: 20rpx;
}

.next {
  width: 60%;
  height: 80rpx;
  color: #fff;
  line-height: 80rpx;
  background: #4297fa;
}
