.tab-bar {
  position: fixed;
  top: 15px;
  left: 0;
  right: 0;
  height: 48px;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  justify-content: center;
}

.tab-bar-item {
  width: 45%;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 0px 13px 0px rgba(27, 27, 27, 0.08);
}

.tab-bar-item {
  border-radius: 15rpx;
}

